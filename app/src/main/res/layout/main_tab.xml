<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginEnd="6dp"
    android:backgroundTint="#3A3D4F"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/MainTabLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/speedometerValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="@string/_0"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="150sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/speedometerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/mph"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/speedometerValue"
                app:layout_constraintStart_toStartOf="@+id/speedometerValue" />

            <RadioButton
                android:id="@+id/startLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:buttonTint="#3A3D4F"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <sae.iit.saedashboard.LinearGauge
                    android:id="@+id/powerGauge2"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="32dp"
                    android:padding="20dp"
                    android:scaleX="-1" />

                <sae.iit.saedashboard.LinearGauge
                    android:id="@+id/powerGauge"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="32dp"
                    android:padding="20dp"
                    android:scaleX="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/BMSLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/linearLayout3"
                app:layout_constraintTop_toTopOf="@+id/linearLayout3"
                app:layout_constraintVertical_bias="0.85">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:foregroundGravity="center">

                    <sae.iit.saedashboard.LinearGauge
                        android:id="@+id/BMSChargeGauge"
                        android:layout_width="180dp"
                        android:layout_height="0dp"
                        android:scaleX="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/BMSChargeValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/_0_w"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/white"
                        android:textSize="50sp"
                        app:layout_constraintBottom_toBottomOf="@id/BMSChargeGauge"
                        app:layout_constraintEnd_toEndOf="@id/BMSChargeGauge"
                        app:layout_constraintStart_toStartOf="@id/BMSChargeGauge"
                        app:layout_constraintTop_toTopOf="@id/BMSChargeGauge" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/BMSText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="@string/power_watts"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rightMotorTempLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
                app:layout_constraintTop_toTopOf="@+id/linearLayout3"
                app:layout_constraintVertical_bias="0.85">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:foregroundGravity="center">

                    <sae.iit.saedashboard.LinearGauge
                        android:id="@+id/rightMotorTempGauge"
                        android:layout_width="180dp"
                        android:layout_height="0dp"
                        android:scaleX="-1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/rightMotorTempValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/_0Per"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/white"
                        android:textSize="50sp"
                        app:layout_constraintBottom_toBottomOf="@id/rightMotorTempGauge"
                        app:layout_constraintEnd_toEndOf="@id/rightMotorTempGauge"
                        app:layout_constraintStart_toStartOf="@id/rightMotorTempGauge"
                        app:layout_constraintTop_toTopOf="@id/rightMotorTempGauge" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/rightMotorTempText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="@string/battery"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/rightMotorTempLayout"
                app:layout_constraintStart_toEndOf="@+id/BMSLayout"
                app:layout_constraintTop_toTopOf="@+id/linearLayout3"
                app:layout_constraintVertical_bias="0.85">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <RadioButton
                        android:id="@+id/lagLight"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:buttonTint="#3A3D4F"
                        android:checked="false"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:gravity="center"
                        android:text="@string/lag"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/lagLightText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/lagLight"
                        android:layout_weight="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:textColor="#3A3D4F"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/lagLight"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <RadioButton
                    android:id="@+id/FaultLight"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:buttonTint="#3A3D4F"
                    android:checked="false"
                    android:clickable="false"
                    android:contextClickable="false"
                    android:text="@string/fault"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/waitingLight"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:buttonTint="#3A3D4F"
                    android:checked="false"
                    android:clickable="false"
                    android:contextClickable="false"
                    android:text="@string/waiting"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/chargingLight"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:buttonTint="#3A3D4F"
                    android:checked="false"
                    android:clickable="false"
                    android:contextClickable="false"
                    android:text="@string/charging"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/currentState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="0dp"
                    android:text="@string/current_state"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
