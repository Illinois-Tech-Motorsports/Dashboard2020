<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="export"
        android:text="@string/export_data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="50dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/leftMCTempLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:foregroundGravity="center">

                    <sae.iit.saedashboard.LinearGauge
                        android:id="@+id/leftMCTempGauge"
                        android:layout_width="180dp"
                        android:layout_height="0dp"
                        android:scaleX="-1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/leftMCTempValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/_0"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/white"
                        android:textSize="50sp"
                        app:layout_constraintBottom_toBottomOf="@id/leftMCTempGauge"
                        app:layout_constraintEnd_toEndOf="@id/leftMCTempGauge"
                        app:layout_constraintStart_toStartOf="@id/leftMCTempGauge"
                        app:layout_constraintTop_toTopOf="@id/leftMCTempGauge" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/leftMCTempText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="@string/left_mc_temp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <LinearLayout
                android:id="@+id/leftMotorTempLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:foregroundGravity="center">

                    <sae.iit.saedashboard.LinearGauge
                        android:id="@+id/leftMotorTempGauge"
                        android:layout_width="180dp"
                        android:layout_height="0dp"
                        android:scaleX="-1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/leftMotorTempValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/_0"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/white"
                        android:textSize="50sp"
                        app:layout_constraintBottom_toBottomOf="@id/leftMotorTempGauge"
                        app:layout_constraintEnd_toEndOf="@id/leftMotorTempGauge"
                        app:layout_constraintStart_toStartOf="@id/leftMotorTempGauge"
                        app:layout_constraintTop_toTopOf="@id/leftMotorTempGauge" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/leftMotorTempText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="@string/left_motor_temp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rightMCTempLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:foregroundGravity="center">

                    <sae.iit.saedashboard.LinearGauge
                        android:id="@+id/rightMCTempGauge"
                        android:layout_width="180dp"
                        android:layout_height="0dp"
                        android:scaleX="-1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/rightMCTempValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/_0"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/white"
                        android:textSize="50sp"
                        app:layout_constraintBottom_toBottomOf="@id/rightMCTempGauge"
                        app:layout_constraintEnd_toEndOf="@id/rightMCTempGauge"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@id/rightMCTempGauge"
                        app:layout_constraintTop_toTopOf="@id/rightMCTempGauge"
                        app:layout_constraintVertical_bias="1.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/rightMCTempText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="@string/right_mc_temp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <LinearLayout
                android:id="@+id/rightMotorTempLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:foregroundGravity="center">

                    <sae.iit.saedashboard.LinearGauge
                        android:id="@+id/rightMotorTempGauge"
                        android:layout_width="180dp"
                        android:layout_height="0dp"
                        android:scaleX="-1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/rightMotorTempValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/_0"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/white"
                        android:textSize="50sp"
                        app:layout_constraintBottom_toBottomOf="@id/rightMotorTempGauge"
                        app:layout_constraintEnd_toEndOf="@id/rightMotorTempGauge"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@id/rightMotorTempGauge"
                        app:layout_constraintTop_toTopOf="@id/rightMotorTempGauge"
                        app:layout_constraintVertical_bias="1.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/rightMotorTempText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="@string/right_motor_temp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/DCBusCurrentLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:foregroundGravity="center">

                    <sae.iit.saedashboard.LinearGauge
                        android:id="@+id/DCBusCurrentGauge"
                        android:layout_width="180dp"
                        android:layout_height="0dp"
                        android:scaleX="-1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/DCBusCurrentValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/_0"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/white"
                        android:textSize="50sp"
                        app:layout_constraintBottom_toBottomOf="@id/DCBusCurrentGauge"
                        app:layout_constraintEnd_toEndOf="@id/DCBusCurrentGauge"
                        app:layout_constraintStart_toStartOf="@id/DCBusCurrentGauge"
                        app:layout_constraintTop_toTopOf="@id/DCBusCurrentGauge" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/DCBusCurrentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="@string/dc_bus_current"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <LinearLayout
                android:id="@+id/activeAeroPosLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:foregroundGravity="center">

                    <sae.iit.saedashboard.LinearGauge
                        android:id="@+id/activeAeroPosGauge"
                        android:layout_width="180dp"
                        android:layout_height="0dp"
                        android:scaleX="-1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/activeAeroPosValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/_0"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/white"
                        android:textSize="50sp"
                        app:layout_constraintBottom_toBottomOf="@id/activeAeroPosGauge"
                        app:layout_constraintEnd_toEndOf="@id/activeAeroPosGauge"
                        app:layout_constraintStart_toStartOf="@id/activeAeroPosGauge"
                        app:layout_constraintTop_toTopOf="@id/activeAeroPosGauge" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/activeAeroPosText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="@string/active_aero_pos"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>