<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121527"
    android:clickable="false"
    tools:context=".MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/MainPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:id="@+id/FunctionTab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:contentDescription="@string/show_app_functions"
                android:keepScreenOn="true"
                android:onClick="onClickSH"
                app:srcCompat="@android:drawable/ic_menu_manage" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="#ff80cbc4"
                app:tabSelectedTextColor="@android:color/white"
                app:tabTextColor="@android:color/white">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/mainTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mainTabName" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/secondaryTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/secondaryTabName" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/troubleshootTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/troubleshootTabName" />
            </com.google.android.material.tabs.TabLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/FunctionSubTab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:keepScreenOn="true"
            android:visibility="invisible"
            tools:visibility="visible">

            <LinearLayout
                android:id="@+id/FunctionSubButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:keepScreenOn="true"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@+id/SerialToggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onSerialToggle" />

                <Button
                    android:id="@+id/ClearF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/ping_serial_to_clear_faults"
                    android:keepScreenOn="true"
                    android:onClick="onClickFault"
                    android:text="@string/faults" />

                <Button
                    android:id="@+id/Clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/clear_the_serial_log"
                    android:keepScreenOn="true"
                    android:longClickable="true"
                    android:onClick="onClickClear"
                    android:text="@string/clear" />

                <ToggleButton
                    android:id="@+id/Load"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:keepScreenOn="true"
                    android:longClickable="true"
                    android:onClick="onClickLoad"
                    android:textOff="@string/json"
                    android:textOn="@string/json" />

                <ToggleButton
                    android:id="@+id/modeToggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:onClick="onModeToggle"
                    android:text="@string/modetoggle"
                    android:textOff="@string/ascii"
                    android:textOn="@string/hex" />

                <ToggleButton
                    android:id="@+id/chargeSet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:onClick="onClickCharge"
                    android:textOff="@string/charge"
                    android:textOn="@string/charging"
                    android:textSize="12sp" />

            </LinearLayout>

            <ScrollView
                android:id="@+id/SerialScroller"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="#73FFFFFF"
                android:overScrollMode="always">

                <TextView
                    android:id="@+id/SerialLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="monospace"
                    android:keepScreenOn="true"
                    android:padding="4dp"
                    android:scrollbars="vertical"
                    android:text=""
                    android:textAlignment="viewStart"
                    android:textColor="@color/black" />
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
